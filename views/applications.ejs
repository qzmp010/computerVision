    <body>
        <header>
            <h1>Computer Vision and Autonomous Vehicles</h1>
        </header>

        <%- include('partials/nav.ejs') %>

            <main>

                <figure>
                    <img class="main-img" src="img/lidar2.webp" alt="Graphic showing Lidar sensor's range">
